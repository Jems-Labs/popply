generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  image    String?
  password String
  name     String
  shops    Shop[]
}

model Shop {
  id          Int       @id @default(autoincrement())
  ownerId     Int
  owner       User      @relation(fields: [ownerId], references: [id])
  name        String
  description String    @db.Text
  logo        String?
  banner      String?
  category    String
  uniqueUrl   String    @unique
  products    Product[]
}

model Product {
  id          Int    @id @default(autoincrement())
  shopId      Int
  shop        Shop   @relation(fields: [shopId], references: [id])
  name        String
  description String @db.Text
  price       Float  @default(0.0)
  image       String
  productUrl  String
}
